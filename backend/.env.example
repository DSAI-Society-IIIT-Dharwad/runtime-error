# Capture Configuration
CAPTURE_MODE=pcap  # Options: live, pcap
PCAP_PATH=data/sample.pcap  # Path to PCAP file for offline analysis
IFACE=eth0  # Network interface for live capture

# Database
DB_URL=sqlite:///./guardian.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WS_ORIGIN=http://localhost:5173
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# Anomaly Detection
ANOMALY_CONTAMINATION=0.02  # Expected proportion of anomalies
MODEL_RETRAIN_INTERVAL=86400  # Seconds between model retraining (24h)

# Security
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=127.0.0.1,localhost

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/guardian.log

# Thresholds
DNS_QPS_THRESHOLD=10  # DNS queries per second threshold
HIGH_RISK_PORTS=23,2323,445,135,139,3389
SUSPICIOUS_DOMAINS_FILE=data/suspicious_domains.txt

# Performance
FLOW_WINDOW_SECONDS=5  # Aggregation window for flows
WS_UPDATE_INTERVAL=2  # WebSocket update interval in seconds
MAX_FLOWS_CACHE=10000  # Maximum flows to keep in memory
MAX_ALERTS_CACHE=1000  # Maximum alerts to keep in memory
