# Environment variables for Enterprise Security Scanner
# Copy this file to .env and configure your values

# Targets (comma-separated)
SCANNER_TARGETS=https://example.com,https://api.example.com

# Scan mode
SCANNER_PASSIVE_ONLY=true

# Concurrency control
SCANNER_MAX_CONCURRENCY=4
SCANNER_TIMEOUT=3600

# Output directory
SCANNER_OUTPUT_DIR=out

# ZAP configuration
ZAP_HOST=localhost
ZAP_PORT=8090
ZAP_API_KEY=scanner-api-key

# API endpoints for enrichment
EPSS_API_URL=https://api.first.org/data/v1/epss
KEV_CATALOG_URL=https://www.cisa.gov/sites/default/files/feeds/known_exploited_vulnerabilities.json

